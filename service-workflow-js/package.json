{
  "name": "service-workflow",
  "version": "1.0.0",
  "description": "Сервис для управления воркфлоу",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "build:prod": "NODE_ENV=production webpack --config webpack.config.js",
    "start": "node ./dist/index.js",
    "start:worker": "node ./dist/worker.js",
    "start:consumer": "node ./dist/kafka-consumer.js",
    "dev": "NODE_ENV=development ts-node-esm src/index.ts",
    "dev:worker": "NODE_ENV=development ts-node-esm src/worker.ts",
    "dev:consumer": "NODE_ENV=development ts-node-esm src/kafka-consumer.ts",
    "dev:build": "NODE_ENV=development webpack --watch --config webpack.config.js",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@temporalio/client": "^1.8.0",
    "@temporalio/worker": "^1.8.0",
    "@temporalio/workflow": "^1.8.0",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "kafkajs": "^2.2.4",
    "winston": "^3.11.0"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.1",
    "@babel/preset-typescript": "^7.23.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.17.41",
    "babel-loader": "^10.0.0",
    "enhanced-resolve": "^5.18.1",
    "nodemon": "^3.1.10",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "webpack-dev-middleware": "^7.4.2",
    "webpack-hot-middleware": "^2.26.1",
    "webpack-node-externals": "^3.0.0"
  }
}